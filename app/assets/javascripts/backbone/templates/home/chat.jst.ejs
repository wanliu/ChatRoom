<pre id='chat'></pre>
<form class='input-text'>
  <div class="row"> 
    <div class="span2" id="showEmoticons">
        <%= image_tag("assets/emoticons/0.gif") %>
    </div> 
    <div class="span8"> 
       <div id='msg' contentEditable="true" style="border:1px solid #ccc;" class="span8" placeholder='type message here...' />
    </div>
    <div class="span1 pull-right">
      <button class="btn btn-primary">发送</button>
      <span>Ctrl+Enter</span>
      <button class="btn btn-warning quitRoom">离开</button>
    </div>
  </div>
</form>    

